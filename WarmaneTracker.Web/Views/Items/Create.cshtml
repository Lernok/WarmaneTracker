@model WarmaneTracker.Web.Models.Item
@{
    ViewData["Title"] = "Nuevo Item";
}

<h2>Nuevo Item</h2>

<form asp-action="Create" method="post" class="mt-3" autocomplete="off">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">URL</label>
        <input class="form-control" asp-for="Url" />
        <div class="form-text">Pegá la URL de ah.nerfed.net del item</div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <label class="form-label">Faction</label>
            <input class="form-control" asp-for="Faction" />
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Realm</label>
            <input class="form-control" asp-for="Realm" />
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">TargetStock</label>
            <input class="form-control" asp-for="TargetStock" />
        </div>
    </div>

    <button class="btn btn-primary">Guardar</button>
    <a class="btn btn-link" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
