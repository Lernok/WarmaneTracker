@model List<WarmaneTracker.Web.Models.PriceHistory>
@{
    var item = (WarmaneTracker.Web.Models.Item)ViewBag.Item!;
    ViewData["Title"] = "History - " + item.Name;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="m-0">History</h2>
        <div class="text-muted">@item.Name</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
</div>

<table class="table table-striped table-sm align-middle">
    <thead>
        <tr>
            <th>Timestamp (UTC)</th>
            <th class="text-end">Median</th>
            <th class="text-end">Min</th>
            <th class="text-end">Qty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.TimestampUtc.ToString("u")</td>
                <td class="text-end">@h.MedianBuyoutGold.ToString("0.##")</td>
                <td class="text-end">@h.MinBuyoutGold.ToString("0.##")</td>
                <td class="text-end">@h.Qty</td>
            </tr>
        }
    </tbody>
</table>
