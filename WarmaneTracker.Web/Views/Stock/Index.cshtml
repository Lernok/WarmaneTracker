@model List<WarmaneTracker.Web.Controllers.StockController.StockRowVm>
@{
    ViewData["Title"] = "Stock";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">Stock (OnHand)</h2>
</div>

<table class="table table-striped table-sm align-middle">
    <thead>
        <tr>
            <th>Item</th>
            <th>URL</th>
            <th style="width:160px" class="text-end">OnHand</th>
            <th style="width:160px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Name</td>
                <td class="text-truncate" style="max-width: 520px">
                    <a href="@r.Url" target="_blank">@r.Url</a>
                </td>
                <td class="text-end">
                    <form asp-action="Update" method="post" class="d-flex justify-content-end gap-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="itemId" value="@r.ItemId" />
                        <input class="form-control form-control-sm text-end" style="max-width: 120px"
                               type="number" name="onHand" value="@r.OnHand" min="0" />
                        <button class="btn btn-sm btn-outline-primary">Guardar</button>
                    </form>
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
